<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myginee.customer.fragment.MyGineeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rrLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="5dp"
                    android:text="@string/address_txt"
                    android:textSize="@dimen/_12sdp"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/montserrat_regular"

                    />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_toLeftOf="@id/tvWallet"
                    android:src="@drawable/ic_points"
                    android:padding="@dimen/dimen_5dp"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <TextView
                    android:id="@+id/tvWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="5dp"
                    android:text="0"
                    android:textSize="@dimen/_12sdp"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_regular"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/etSearchServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:background="@drawable/et_bg"
                android:hint="@string/search_service_txt"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="20dp"
                android:drawableTint="@color/text_color"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_regular"
                />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragMyGinee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

</LinearLayout>