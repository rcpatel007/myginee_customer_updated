<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/imageCartProduct"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_notification"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:id="@+id/llView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/imageView"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvCartProductDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="bottom|start"
                android:lines="2"
                android:text="Waste pipe, washbasin pipe, washbasin pipe, washbasin"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvCartProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="start|center"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start|center"
                android:paddingTop="@dimen/_5sdp"
                android:text="Rs. 80"
                android:textColor="#313133"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txtDeleteFromCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="@string/txt_delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/red_button"/>


                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/imageCartRemoveProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_remove"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/txtCartQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_color_name"
                    android:textSize="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/imageCartAddProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_add"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>