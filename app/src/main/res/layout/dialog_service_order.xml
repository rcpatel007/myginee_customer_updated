<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/OrderProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="CUSTOMER NAME"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/dotted_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgOrderProduct"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_notification" />

        <LinearLayout
            android:id="@+id/llView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrProName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:lines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvProDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center|start"
                android:lines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvCatPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="start|center"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="start|center"
                android:paddingTop="@dimen/_5sdp"
                android:text="Rs. 80"
                android:textColor="#313133"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/dotted_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:lines="2"
        android:padding="@dimen/_5sdp"
        android:text="ADDRESS : hfgdhf hdgfh dgfd fgdgf djghjdgfhgdf"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp" />

</LinearLayout>