<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_points"
            android:tag="image_tag"
            android:layout_margin="@dimen/_5sdp"/>

        <RelativeLayout
            android:id="@+id/llView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/imageView"
            >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingRight="@dimen/_5sdp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tvCustID"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|start"
                   android:fontFamily="@font/montserrat_regular"
                   android:gravity="center"
                   android:text="hcgvdfcfchfchh"
                   android:textColor="#313133"
                   android:textSize="@dimen/_10sdp"
                   android:layout_alignParentLeft="true"/>

               <TextView
                   android:id="@+id/transaction_raw_tv_response_message"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Credited"
                   android:textColor="#313133"
                   android:layout_marginTop="@dimen/dimen_5dp"
                   android:fontFamily="@font/montserrat_regular"
                   android:textSize="@dimen/_8sdp"/>

           </LinearLayout>

            <TextView
                android:id="@+id/tvWalletPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:lines="2"
                android:text="500 Rs."
                android:textColor="@color/signup_btn_color"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dotted_line" />

</LinearLayout>
