<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary"
                android:dashGap="8dp"
                android:dashWidth="12dp" />

            <solid android:color="#00FFFFFF" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item></layer-list>